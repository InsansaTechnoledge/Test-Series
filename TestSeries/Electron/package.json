{
  "name": "evalvo-electron-proctor",
  "version": "1.0.0",
  "description": "Evalvo Proctor Desktop Application",
  "main": "main.js",
  "scripts": {
    "electron": "electron .",
    "electron-dev": "ELECTRON_IS_DEV=true electron .",
    "start": "electron .",
    "dev": " electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "dist": "npm run build",
    "clean": "rm -rf dist node_modules && npm install"
  },
  "build": {
    "appId": "com.evalvo.proctor",
    "productName": "Evalvo Proctor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "package.json",
      "assets/**/*",
      "bin/**/*",
      "build/**/*"
    ],
   "extraFiles": [
      {
        "from": "./bin/mac/proctor_engine", 
        "to": "bin/mac/proctor_engine"
      },
      {
        "from": "./bin/win/proctor_engine.exe", 
        "to": "bin/win/proctor_engine.exe"
      }
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "category": "public.app-category.education",
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png"
    },
    "protocols": [
      {
        "name": "examproc",
        "schemes": [
          "examproc"
        ]
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "asarUnpack": [
      "node_modules/node-pty/**/*"
    ]
  },
  "devDependencies": {
    "electron": "^35.5.1",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  },
  "author": "Evalvo Team",
  "license": "MIT",
  "homepage": "https://evalvo.com"
}
